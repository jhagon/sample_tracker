<% title "Assets" %>

<table class="pretty">
  <tr>
    <th>Document</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for asset in @assets %>
    <tr class="<%= cycle :odd, :even %>">
      <td><%= asset.document %></td>
      <td><%= asset.description %></td>
      <td><%= link_to image_tag("/images/show.gif",
              :title => "Show",
              :alt   => "Show"),
            asset %></td>
      <td><%= link_to image_tag("/images/edit.gif",
              :title => "Edit",
              :alt   => "Edit"),
            edit_asset_path(asset) %></td>
      <td><%= link_to image_tag("/images/delete.gif",
              :title => "Delete",
              :alt   => "Delete"),
            asset,
            :confirm => 'Are you sure?',
            :method => :delete %></td>

    </tr>
  <% end %>
</table>

<p><%= link_to "New Asset", new_asset_path %></p>
