<h2><%= "#{@user.firstname} #{@user.lastname}"%></h2>


<p>
  <strong>Group</strong>
  <%= "#{@user.group.group_desc}(#{@user.group.group_abbr})" %>
</p>
<p>
  <strong>EMail</strong>
  <%=@user.email %>
</p>
<p>
  <strong>Administrator?</strong>
  <%=@user.admin? ? 'yes' : 'no' %>
</p>

<h3><%="Samples" %></h3>
<% if @user.samples.count > 0 %>
<table>
  <tr>
    <th>Code</th>
    <th>Params</th>
    <th>Status</th>
    <th>Update</th>
    <th>Priority</th>
    <th>Powd</th>
    <th>Chiral</th>
    <th>Cost Code</th>
    <th>Group</th>
  </tr>
  <% for sample in @user.samples %>
    <tr>
      <td><%= sample.code %></td>
      <td><%= sample.params %></td>
      <td><%= sample.flag.name %></td>
      <td><%= sample.updated_at %></td>
      <td><%= sample.priority %></td>
      <td><%= sample.powd %></td>
      <td><%= sample.chiral %></td>
      <td><%= sample.cost_code %></td>
      <td><%= link_to "Show", sample %></td>
    </tr>
  <% end %>
</table>
<% else %>
<p>
You have no samples!
</p>
<% end %>

<%= link_to "Back", :back %>
